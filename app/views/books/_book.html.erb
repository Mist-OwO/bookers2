<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= form_for(book) do |f| %>
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>

        <div class="form-group">
        	<%= f.label :Opinion %>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>